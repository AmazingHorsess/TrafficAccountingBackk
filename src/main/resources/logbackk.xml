<configuration>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="org.jetbrains.exposed" level="TRACE" /> <!-- Уровень логирования для Exposed -->

    <root level="INFO">
        <appender-ref ref="CONSOLE" />
    </root>
</configuration>